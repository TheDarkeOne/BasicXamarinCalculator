<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="XamarinCalculator.Views.AddCredentialPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Button Text="Add Credential" Command="{Binding AddCredential}"></Button>
        <Button Text="Update Credential" Command="{Binding UpdateCredential}"></Button>
        <Button Text="Delete Credential" Command="{Binding DeleteCredential}"></Button>
    </StackLayout>
</ContentPage>